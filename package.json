{
  "name": "gitlab-ci-validate",
  "version": "0.1.2",
  "description": "Checks if your .gitlab-ci.yml file is valid.",
  "main": "src/index.js",
  "bin": {
    "gitlab-ci-validate": "./src/bin"
  },
  "scripts": {
    "lint": "eslint src",
    "prettier": "prettier --write \"src/*\" \"README.md\"",
    "test": "npm run lint",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "files": [
    "src"
  ],
  "keywords": [
    "gitlab",
    "ci",
    "gitlab-ci",
    "validate"
  ],
  "repository": "https://github.com/pradel/gitlab-ci-validate.git",
  "author": "Pradel LeÌo <pradel.leo@gmail.com>",
  "license": "MIT",
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1"
  },
  "dependencies": {
    "kleur": "^3.0.3",
    "node-fetch": "^2.6.0",
    "sade": "^1.4.2"
  }
}
