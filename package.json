{
  "name": "gitlab-ci-validate",
  "version": "0.4.0",
  "description": "Checks if your .gitlab-ci.yml file is valid.",
  "main": "src/index.js",
  "bin": "./src/bin",
  "scripts": {
    "dev": "./src/bin",
    "lint": "eslint src",
    "prettier": "prettier --write \"src/*\" \"README.md\"",
    "test": "npm run lint",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "files": [
    "src"
  ],
  "keywords": [
    "gitlab",
    "ci",
    "gitlab-ci",
    "validate"
  ],
  "repository": "https://github.com/pradel/gitlab-ci-validate.git",
  "author": "Pradel LeÌo <pradel.leo@gmail.com>",
  "license": "MIT",
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "eslint": "7.16.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "7.1.0",
    "eslint-import-resolver-node": "0.3.4",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.3.0",
    "eslint-plugin-react": "7.21.5",
    "husky": "4.3.6",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1"
  },
  "dependencies": {
    "kleur": "4.1.3",
    "node-fetch": "2.6.1",
    "sade": "1.7.4"
  }
}
